extends layout

block content
    body
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            #bs-example-navbar-collapse-1.col-md-7.collapse.navbar-collapse
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='#') Arcadier
              ul.nav.navbar-nav
                li
                  a(href='#') About
                li
                  a(href='#') Services
                li
                  a(href='#') Contact
            // Collect the nav links, forms, and other content for toggling
            .col-md-3
              .input-group
                input#textSearch.form-control(type='text', placeholder='Search Item/Category')
                span.input-group-btn
                  button#searchButton.btn.btn-success(type='button') Search
            .col-md-2
              button#loginButton.btn.btn-hero(type='button') Log-in
            // /.navbar-collapse
          // /.container
      .container-fluid
        .col-md-12
          header
            #bs-carousel.carousel.fade-carousel.slide(data-ride='carousel', data-interval='4000')
              // Overlay
              .overlay
              // Indicators
              ol.carousel-indicators
                li.active(data-target='#bs-carousel', data-slide-to='0')
                li(data-target='#bs-carousel', data-slide-to='1')
                li(data-target='#bs-carousel', data-slide-to='2')
              // Wrapper for slides
              .carousel-inner
                .item.slides.active
                  .slide-1
                  .hero
                    hgroup
                      h1 WELCOME
                      h3 Explore your fashion needs and wants here. Styles are updated weekly!
                    button.btn.btn-hero.btn-lg(role='button') See all products
                .item.slides
                  .slide-2
                  .hero
                    hgroup
                      h1 Shop For Her
                      h3 Ladies, want to look stylish and turn heads? Check out our collection!
                    button.btn.btn-hero.btn-lg(role='button') See all products
                .item.slides
                  .slide-3
                  .hero
                    hgroup
                      h1 Shop For Him
                      h3 Gentlemen, look dapper and cool with our collection!
                    button.btn.btn-hero.btn-lg(role='button') See all products
            hr

        .col-md-12
          .col-md-3.border-right
            h3 All Categories
            ul.category-list
              li
                a(role='button', data-toggle='collapse', href='#subCategory9') Women's Clothing
                ul#subCategory9.collapse
                  li
                    a(role='button', href='/category/33')
                      | DRESS
                  li
                    a(role='button', href='/category/34')
                      | TOPS
                  li
                    a(role='button', href='/category/35')
                      | KNITWEAR
                  li
                    a(role='button', href='/category/36')
                      | SHIRTS & BLOUSES
              li
                a(role='button', href='/category/28')
                  | Men's Clothing
              li
                a(role='button', data-toggle='collapse', href='#subCategory29') Women's Footwear
                ul#subCategory29.collapse
                  li
                    a(role='button', href='/category/37')
                      | HIGH HEELS
                  li
                    a(role='button', href='/category/38')
                      | FLATS
                  li
                    a(role='button', href='/category/39')
                      | TRAINERS
                  li
                    a(role='button', href='/category/40')
                      | BOOTS
                  li
                    a(role='button', href='/category/41')
                      | WEDGES
                  li
                    a(role='button', href='/category/42')
                      | SANDALS
              li
                a(role='button', href='/category/30')
                  | Men's Footwear
              li
                a(role='button', data-toggle='collapse', href='#subCategory31') Women's Accessories
                ul#subCategory31.collapse
                  li
                    a(role='button', href='/category/43')
                      | HANDBAGS
                  li
                    a(role='button', href='/category/44')
                      | EVENING BAGS
                  li
                    a(role='button', href='/category/45')
                      | PURSES
                  li
                    a(role='button', href='/category/46')
                      | SCARVES
                  li
                    a(role='button', href='/category/47')
                      | WATCHES
              li
                a(role='button', href='/category/32')
                  | Men's Accessories
          .col-md-9
            .row
              h3.pull-left(style='display: inline-block; padding-left: 15px;') Items
              .col-md-6.pull-right.text-right(style='display: inline-block;')

                a.btn.btn-primary.m-r(href='/cart') View Cart

                a.btn.btn-primary.m-r(href='/order/orderhistory') Order History

                a.btn.btn-success(href='/login') Login
            .row
              .col-md-6
                .input-group
                  input#textSearch.form-control(type='text', placeholder='Enter criteria to search item')
                  span.input-group-btn
                    button#searchButton.btn.btn-success(type='button') Search
              .col-md-12(style='padding-top: 20px;')
                h3.text-danger
                  | Select a category or enter a search term


